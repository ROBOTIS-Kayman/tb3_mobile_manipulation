<launch>
  <arg name="use_robot_name" default="tb3_manipulation"/>
  
  <!-- turtlebot3 -->
  <include file="$(find tb3_mobile_manipulation_tools)/launch/turtlebot3_rpi/turtlebot3_robot_remote.launch">
    <arg name="use_robot_name" value="$(arg use_robot_name)"/>
  </include>
  
  <!-- manipulation-moveit -->
  <include file="$(find tb3_mobile_manipulation_tools)/launch/turtlebot3_rpi/tb3_mobile_manipulation_moveit.launch">
    <arg name="use_robot_name" value="$(arg use_robot_name)"/>
  </include>
  
  <!-- navigation -->
  <include file="$(find tb3_mobile_manipulation_tools)/launch/navigation/navigation.launch">
    <arg name="use_robot_name" value="$(arg use_robot_name)"/>
    <arg name="open_rviz" value="true"/>
  </include>
  
  <!-- image transport : compressed -> raw -->
  <node name="image_republish" pkg="image_transport" type="republish" args="compressed in:=/tb3_manipulation/raspicam_node/image raw out:=/tb3_manipulation/raspicam_node/image" respawn="true" />
  
  <!-- camera -->
  <include file="$(find tb3_mobile_manipulation_tools)/launch/camera_ar_track.launch">
    <arg name="use_robot_name" value="$(arg use_robot_name)"/>
  </include>
</launch>
